@using AltSourceBankLibrary
@model Login
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="row">
        <div class="col-md-4"></div><div class="col-md-4"><h2>World's Greatest Banking Ledger!</h2></div><div class="col-md-4"></div>
    </div>
    @using (Html.BeginForm("Index", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        
        <div class="form-group">
            <label>Email:</label>
            <div>
                <input type="text" id="userName" name="UserName" />
            </div>
        </div>
        <div class="form-group">
            <label>Password:</label>
            <div>
                <input type="password" id="password" name="Password"/>
            </div>
        </div>
        <div class="form-group">
            <div >
                <input type="submit" value="Log in" class="btn btn-default" />
            </div>
        </div>
        <p>
            @Html.ActionLink("Not a user yet? Create an account!", "Register")
        </p>
    }

    <div class="error" style="color:red">@ViewData["error"]</div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>