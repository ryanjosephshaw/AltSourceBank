@using AltSourceBankLibrary
@model Login
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="col-md-4"></div><div class="col-md-4"><h2>World's Greatest Banking Ledger!</h2></div><div class="col-md-4"></div>
    </div>
    <div class="row">
        <div class="col-md-4"></div><div class="col-md-4"><h3 style="margin:20px;">Create A New Account</h3></div><div class="col-md-4"></div>
    </div>
    
    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {

        <div class="form-group">
            <label>Please enter your email: </label>
            <div>
                <input type="text" id="userName" name="UserName" />
            </div>
        </div>
        <div class="form-group">
            <label>Please create a password: </label>
            <div>
                <input type="password" id="password" name="Password" />
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" value="Create Account" class="btn btn-default" />
            </div>
        </div>
        <p>
            @Html.ActionLink("Back to Login", "Index")
        </p>
    }

    <div class="error" style="color:red">@ViewData["error"]</div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

