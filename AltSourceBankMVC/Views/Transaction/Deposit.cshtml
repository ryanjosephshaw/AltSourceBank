<h2>Deposit</h2>

@using (Html.BeginForm("Deposit", "Transaction", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <div class="form-group">
        <label>Please enter the amount of your deposit:</label>
        <div>
            <input type="number" id="amount" name="Amount" min="0" value="0" step="any"/>
        </div>
    </div>
    <div class="form-group">
        <div>
            <input type="submit" value="Submit Deposit" class="btn btn-default" />
        </div>
    </div>
}
<div id="result">@ViewData["result"]</div>
